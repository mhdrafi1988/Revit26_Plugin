<Window x:Class="Revit26_Plugin.APUS_V311.Views.AutoPlaceSectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Place Sections"
        Height="900"
        Width="1250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- ================= INPUT PANEL ================= -->

        <Border Grid.Row="0"
                BorderBrush="#CFCFCF"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,10">

            <StackPanel>

                <!-- TITLE BLOCK -->
                <GroupBox Header="Title Block" Margin="0,0,0,10">
                    <ComboBox ItemsSource="{Binding TitleBlocks}"
                              SelectedItem="{Binding SelectedTitleBlock}"
                              DisplayMemberPath="DisplayName"
                              MinHeight="26"
                              Margin="5"/>
                </GroupBox>

                <!-- FILTERS -->
                <GroupBox Header="Filters" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Placement Scope"/>
                            <ComboBox ItemsSource="{Binding PlacementScopes}"
                                      SelectedItem="{Binding SelectedPlacementScope}"
                                      MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Placement State"/>
                            <ComboBox ItemsSource="{Binding PlacementStates}"
                                      SelectedItem="{Binding SelectedPlacementState}"
                                      MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Sheet Filter"/>
                            <ComboBox
                                    ItemsSource="{Binding SheetNumbers}"
                                    SelectedItem="{Binding SheetNumberFilter, Mode=TwoWay}"
                                    MinWidth="120"
                                    Margin="4"
                                    ToolTip="Filter by sheet number" />     
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- LAYOUT -->
                <GroupBox Header="Layout Settings (mm)">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Left Margin"/>
                            <TextBox Text="{Binding LeftMarginMm}"/>
                            <TextBlock Text="Top Margin"/>
                            <TextBox Text="{Binding TopMarginMm}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Right Margin"/>
                            <TextBox Text="{Binding RightMarginMm}"/>
                            <TextBlock Text="Bottom Margin"/>
                            <TextBox Text="{Binding BottomMarginMm}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Horizontal Gap"/>
                            <TextBox Text="{Binding HorizontalGapMm}"/>
                            <TextBlock Text="Vertical Gap"/>
                            <TextBox Text="{Binding VerticalGapMm}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10,0,0,0">
                            <TextBlock Text="Y Tolerance"/>
                            <TextBox Text="{Binding YToleranceMm}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </Border>

        <!-- ================= SECTION LIST ================= -->

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredSections}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Extended"
                  Margin="0,0,0,10">

            <DataGrid.Columns>

                <!-- USER SELECTABLE -->
                <DataGridCheckBoxColumn Width="40"
                                        Binding="{Binding IsSelected, Mode=TwoWay}"/>

                <DataGridTextColumn Header="Section"
                                    Binding="{Binding Name}"
                                    Width="*"/>

                <DataGridTextColumn Header="Scope"
                                    Binding="{Binding PlacementScope}"
                                    Width="140"/>

                <DataGridTextColumn Header="Sheet"
                                    Binding="{Binding SheetNumber}"
                                    Width="120"/>

                <!-- READ-ONLY FIX -->
                <DataGridCheckBoxColumn Header="Placed"
                                        Width="80"
                                        Binding="{Binding IsPlaced, Mode=OneWay}"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- ================= LOG + ACTIONS ================= -->

        <Border Grid.Row="2"
                BorderBrush="#CFCFCF"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8">

            <DockPanel>

                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Place"
                            Width="120"
                            Margin="4"
                            Command="{Binding PlaceCommand}"/>

                    <Button Content="Cancel"
                            Width="120"
                            Margin="4"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>

                <ListBox ItemsSource="{Binding LogEntries}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Message}"
                                       Foreground="{Binding Foreground}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </DockPanel>
        </Border>

    </Grid>
</Window>
