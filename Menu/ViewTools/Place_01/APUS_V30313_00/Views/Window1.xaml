<Window x:Class="Revit26_Plugin.APUS_V313.Views.AutoPlaceSectionsWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Revit26_Plugin.APUS_V313.Helpers"
        xmlns:enums="clr-namespace:Revit26_Plugin.APUS_V313.Enums"
        Title="Auto Place Sections"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="1200"
        MinHeight="700">

    <Window.Resources>
        <!-- Simple converters -->
        <helpers:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- ================= INPUT PANEL ================= -->
        <Border Grid.Row="0" 
                BorderBrush="#CFCFCF" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <!-- TITLE BLOCK -->
                <GroupBox Header="Title Block" Margin="0,0,0,10">
                    <ComboBox ItemsSource="{Binding TitleBlocks}"
                              SelectedItem="{Binding SelectedTitleBlock}"
                              DisplayMemberPath="DisplayName"
                              MinHeight="26" 
                              Margin="5"
                              IsEnabled="{Binding IsPlacing, Converter={StaticResource BoolToVis}, ConverterParameter=True}"/>
                </GroupBox>

                <!-- FILTERS -->
                <GroupBox Header="Filters" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Placement Scope" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding PlacementScopes}"
                                      SelectedItem="{Binding SelectedPlacementScope}"
                                      MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Placement State" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding PlacementStates}"
                                      SelectedItem="{Binding SelectedPlacementState}"
                                      MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Sheet Filter" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding SheetNumberOptions}"
                                      SelectedItem="{Binding SheetNumberFilter}"
                                      MinHeight="26" 
                                      IsEditable="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- LAYOUT SETTINGS -->
                <GroupBox Header="Layout Settings (mm)">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Left Margin" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding LeftMarginMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                            <TextBlock Text="Top Margin" Margin="0,8,0,4"/>
                            <TextBox Text="{Binding TopMarginMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Right Margin" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding RightMarginMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                            <TextBlock Text="Bottom Margin" Margin="0,8,0,4"/>
                            <TextBox Text="{Binding BottomMarginMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Horizontal Gap" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding HorizontalGapMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                            <TextBlock Text="Vertical Gap" Margin="0,8,0,4"/>
                            <TextBox Text="{Binding VerticalGapMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10,0,0,0">
                            <TextBlock Text="Y Tolerance" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding YToleranceMm, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="26"/>
                            <!-- Empty space to align with other columns -->
                            <TextBlock Margin="0,8,0,4" Height="26"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- ================= SECTION LIST ================= -->
        <Border Grid.Row="1"
                BorderBrush="#CFCFCF"
                BorderThickness="1"
                CornerRadius="4"
                Padding="5"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selection Buttons -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,5"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Selection: " 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontWeight="SemiBold"/>
                    <Button Content="Select All" 
                            Command="{Binding SelectAllCommand}" 
                            Width="100" 
                            Margin="2"
                            ToolTip="Select all sections"
                            Padding="5,2"/>
                    <Button Content="Select None" 
                            Command="{Binding SelectNoneCommand}" 
                            Width="100" 
                            Margin="2"
                            ToolTip="Clear all selections"
                            Padding="5,2"/>
                    <Button Content="Select Unplaced" 
                            Command="{Binding SelectUnplacedCommand}" 
                            Width="110" 
                            Margin="2"
                            ToolTip="Select only unplaced sections"
                            Padding="5,2"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredSections}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Extended"
                          IsReadOnly="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="28">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header=" " 
                                                Width="40"
                                                Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Section" 
                                            Binding="{Binding ViewName}" 
                                            Width="2*" 
                                            IsReadOnly="True"
                                            MinWidth="150"/>
                        <DataGridTextColumn Header="Scope" 
                                            Binding="{Binding PlacementScope}" 
                                            Width="1*" 
                                            IsReadOnly="True"
                                            MinWidth="100"/>
                        <DataGridTextColumn Header="Sheet" 
                                            Binding="{Binding SheetNumber}" 
                                            Width="1*" 
                                            IsReadOnly="True"
                                            MinWidth="80"/>
                        <DataGridCheckBoxColumn Header="Placed" 
                                                Width="80"
                                                Binding="{Binding IsPlaced, Mode=OneWay}" 
                                                IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ================= LOG + ACTIONS ================= -->
        <Border Grid.Row="2"
                BorderBrush="#CFCFCF"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8">
            <DockPanel LastChildFill="True">
                <!-- Progress Bar -->
                <ProgressBar DockPanel.Dock="Top"
                             Value="{Binding Progress.Current, Mode=OneWay}"
                             Maximum="{Binding Progress.Total, Mode=OneWay}"
                             Height="20"
                             Margin="0,0,0,5"
                             Visibility="{Binding IsPlacing, Converter={StaticResource BoolToVis}}"/>

                <!-- Progress Text -->
                <TextBlock DockPanel.Dock="Top"
                           Text="{Binding Progress.Current, StringFormat=Progress: {0}/{1}, Mode=OneWay}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           Visibility="{Binding IsPlacing, Converter={StaticResource BoolToVis}}"/>

                <!-- Options & Action Buttons -->
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <!-- Left side: Options -->
                    <CheckBox Content="Open sheets after placement"
                              IsChecked="{Binding OpenSheetsAfterPlacement}"
                              Margin="4,5,20,5"
                              VerticalAlignment="Center"/>

                    <!-- Right side: Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="Place"
                                Width="120"
                                Height="28"
                                Margin="4"
                                Command="{Binding PlaceCommand}"
                                FontWeight="SemiBold"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPlacing}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Cancel"
                                Width="120"
                                Height="28"
                                Margin="4"
                                Command="{Binding CancelCommand}"
                                Visibility="{Binding IsPlacing, Converter={StaticResource BoolToVis}}"
                                Background="#D83B01"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,0"/>

                        <Button Content="Debug" 
                                Command="{Binding DebugCommand}" 
                                Width="80" 
                                Height="28"
                                Margin="4"
                                ToolTip="Show placement state info"
                                Background="#107C10"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Log ListBox -->
                <Border BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        CornerRadius="2"
                        Margin="0,5,0,0">
                    <ListBox ItemsSource="{Binding LogEntries}"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Standard"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayText}" FontSize="12" TextWrapping="Wrap"
                                           Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>