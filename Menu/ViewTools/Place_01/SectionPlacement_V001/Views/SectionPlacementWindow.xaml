<Window x:Class="Revit26_Plugin.SectionPlacement_V07.Views.SectionPlacementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:Revit26_Plugin.SectionPlacement_V07.Helpers"
        mc:Ignorable="d"
        Title="Place Unplaced Sections"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="12">

        <!-- Bottom action bar -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Place Sections"
                    Width="120"
                    Margin="5,0"
                    Command="{Binding PlaceCommand}" />

            <Button Content="Cancel"
                    Width="90"
                    Margin="5,0"
                    Command="{Binding CancelCommand}" />
        </StackPanel>

        <!-- Main content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Section list -->
            <GroupBox Header="Unplaced Section Views"
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <ListBox ItemsSource="{Binding Sections}"
                         SelectionMode="Extended"
                         DisplayMemberPath="Name"
                          />
            </GroupBox>

            <!-- Settings -->
            <GroupBox Header="Placement Settings"
                      Grid.Column="1">
                <StackPanel Margin="10">

                    <TextBlock Text="Title Block" />
                    <ComboBox ItemsSource="{Binding TitleBlocks}"
                              SelectedItem="{Binding SelectedTitleBlock}"
                              DisplayMemberPath="Name"
                              Margin="0,5,0,10" />

                    <TextBlock Text="Rows per Sheet" />
                    <TextBox Text="{Binding Rows}"
                             Margin="0,5,0,10" />

                    <TextBlock Text="Columns per Sheet" />
                    <TextBox Text="{Binding Columns}"
                             Margin="0,5,0,10" />

                    <TextBlock Text="Horizontal Gap (mm)" />
                    <TextBox Text="{Binding HorizontalGapMm}"
                             Margin="0,5,0,10" />

                    <TextBlock Text="Vertical Gap (mm)" />
                    <TextBox Text="{Binding VerticalGapMm}"
                             Margin="0,5,0,0" />

                </StackPanel>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
