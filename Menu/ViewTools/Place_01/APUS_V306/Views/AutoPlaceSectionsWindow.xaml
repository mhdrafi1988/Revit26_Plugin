<Window x:Class="Revit26_Plugin.APUS_V306.Views.AutoPlaceSectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Place Sections (APUS)"
        Height="720"
        Width="980"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FFF3F3F3">

    <DockPanel LastChildFill="True">

        <!-- ================= LIVE LOG PANEL ================= -->
        <Border DockPanel.Dock="Bottom"
                Height="160"
                Background="#FF1E1E1E"
                Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Live Log"
                           Foreground="#FFCCCCCC"
                           FontWeight="Bold"
                           Margin="0,0,0,4"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding LogEntries}"
                         Background="#FF1E1E1E"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}"
                                       Foreground="LightGray"
                                       FontFamily="Consolas"
                                       FontSize="12"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== LEFT PANEL : FILTERS & OPTIONS ========== -->
            <ScrollViewer Grid.Column="0"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- FILTERING -->
                    <GroupBox Header="Section Filtering"
                              Margin="0,0,0,10">
                        <StackPanel Margin="8">

                            <!-- Placement Scope -->
                            <TextBlock Text="Placement Scope"/>
                            <ComboBox ItemsSource="{Binding PlacementScopes}"
                                      Text="{Binding SelectedPlacementScope, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      Margin="0,4,0,10"/>

                            <!-- Placement State -->
                            <TextBlock Text="Placement State"/>
                            <ComboBox ItemsSource="{Binding PlacementStates}"
                                      SelectedItem="{Binding SelectedPlacementState}"
                                      Margin="0,4,0,10"/>

                            <!-- Sheet Number -->
                            <TextBlock Text="Sheet Number (placed views only)"/>
                            <TextBox Text="{Binding SheetNumberFilter, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- SORTING -->
                    <GroupBox Header="Placement Order"
                              Margin="0,0,0,10">
                        <StackPanel Margin="8">
                            <TextBlock Text="Y Tolerance (mm)"/>
                            <TextBox Text="{Binding YToleranceMm}"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- LAYOUT -->
                    <GroupBox Header="Sheet Layout">
                        <StackPanel Margin="8">

                            <UniformGrid Columns="2" Rows="4">
                                <TextBlock Text="Left Margin (mm)"/>
                                <TextBox Text="{Binding LeftMarginMm}"/>

                                <TextBlock Text="Right Margin (mm)"/>
                                <TextBox Text="{Binding RightMarginMm}"/>

                                <TextBlock Text="Top Margin (mm)"/>
                                <TextBox Text="{Binding TopMarginMm}"/>

                                <TextBlock Text="Bottom Margin (mm)"/>
                                <TextBox Text="{Binding BottomMarginMm}"/>
                            </UniformGrid>

                            <Separator Margin="0,10,0,10"/>

                            <UniformGrid Columns="2" Rows="2">
                                <TextBlock Text="Horizontal Gap (mm)"/>
                                <TextBox Text="{Binding HorizontalGapMm}"/>

                                <TextBlock Text="Vertical Gap (mm)"/>
                                <TextBox Text="{Binding VerticalGapMm}"/>
                            </UniformGrid>

                        </StackPanel>
                    </GroupBox>

                    <!-- ACTION BUTTON -->
                    <Button Content="Place Sections"
                            Command="{Binding PlaceCommand}"
                            Height="36"
                            Margin="0,12,0,0"
                            Background="#FF007ACC"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </ScrollViewer>

            <!-- ========== RIGHT PANEL : SECTION LIST ========== -->
            <GroupBox Grid.Column="2"
                      Header="Eligible Sections">
                <ListView ItemsSource="{Binding FilteredSections}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="40">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Name"
                                            Width="220"
                                            DisplayMemberBinding="{Binding Name}"/>

                            <GridViewColumn Header="Scale"
                                            Width="60"
                                            DisplayMemberBinding="{Binding Scale}"/>

                            <GridViewColumn Header="Placed"
                                            Width="60"
                                            DisplayMemberBinding="{Binding IsPlaced}"/>

                            <GridViewColumn Header="Sheet"
                                            Width="80"
                                            DisplayMemberBinding="{Binding SheetNumber}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

        </Grid>
    </DockPanel>
</Window>
