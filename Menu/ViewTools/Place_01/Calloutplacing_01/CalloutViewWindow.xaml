<Window x:Class="Revit22_Plugin.callout.Views.SectionViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Section View Manager" Height="500" Width="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Section -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="150" Margin="0 0 10 0"
                     ToolTip="Filter by Sheet Name"
                     Text="{Binding SheetNameFilter, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Width="150" Margin="0 0 10 0"
                     ToolTip="Filter by Sheet Number"
                     Text="{Binding SheetNumberFilter, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged" />
            <CheckBox Content="Placed Only" Margin="0 0 10 0"
                      IsChecked="{Binding ShowPlacedOnly}" />
            <CheckBox Content="Unplaced Only"
                      IsChecked="{Binding ShowUnplacedOnly}" />
        </StackPanel>

        <!-- View List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredViews}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionMode="Extended" Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                <DataGridTextColumn Header="Section Name" Binding="{Binding SectionName}" Width="*"/>
                <DataGridTextColumn Header="Sheet Name" Binding="{Binding SheetName}" Width="*"/>
                <DataGridTextColumn Header="Sheet Number" Binding="{Binding SheetNumber}" Width="*"/>
                <DataGridTextColumn Header="Detail #" Binding="{Binding DetailNumber}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Callout Size (mm):" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <TextBox Width="80" Text="{Binding CalloutSize}" Margin="0 0 10 0"
                     ToolTip="Enter callout box size in millimeters"/>
            <TextBlock Text="Drafting View:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox Width="150" ItemsSource="{Binding DraftingViews}"
                      SelectedItem="{Binding SelectedDraftingView}"
                      DisplayMemberPath="Name" Margin="0 0 10 0"
                      ToolTip="Select target drafting view"/>
            <Button Content="Insert Callouts" Command="{Binding InsertReferenceViewsCommand}" Width="130"/>
        </StackPanel>
    </Grid>
</Window>
