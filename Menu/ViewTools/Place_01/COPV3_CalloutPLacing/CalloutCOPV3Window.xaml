<Window x:Class="Revit22_Plugin.copv3.Views.CalloutCOPV3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Callout Tool V3" Height="700" Width="950"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FILTERS -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

            <StackPanel Width="220" Margin="0 0 10 0">
                <TextBlock Text="Sheet Filter"/>
                <ComboBox ItemsSource="{Binding Sheets}"
                          SelectedItem="{Binding SelectedSheet}"
                          DisplayMemberPath="SheetNumber"/>
            </StackPanel>

            <StackPanel Width="220" Margin="0 0 10 0">
                <TextBlock Text="Drafting View"/>
                <ComboBox ItemsSource="{Binding DraftingViews}"
                          SelectedItem="{Binding SelectedDraftingView}"
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <StackPanel Width="220" Margin="0 0 10 0">
                <TextBlock Text="Search"/>
                <TextBox Text="{Binding SearchText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Content="Select All" Command="{Binding CmdSelectAll}" Width="90" Margin="0 0 10 0"/>
                <Button Content="None" Command="{Binding CmdSelectNone}" Width="70" Margin="0 0 10 0"/>
                <Button Content="Invert" Command="{Binding CmdSelectInvert}" Width="70"/>
            </StackPanel>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                <DataGridTextColumn Header="Section Name" Binding="{Binding SectionName}" Width="*"/>
                <DataGridTextColumn Header="Sheet #" Binding="{Binding SheetNumber}" Width="100"/>
                <DataGridTextColumn Header="Detail #" Binding="{Binding DetailNumber}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding DisplayStatus}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- LOG -->
        <GroupBox Header="Log" Grid.Row="2" Margin="0 10 0 10">
            <ListBox ItemsSource="{Binding LogItems}"/>
        </GroupBox>

        <!-- PLACE BUTTON -->
        <Button Grid.Row="3"
                Content="PLACE CALLOUTS"
                Command="{Binding CmdPlace}"
                Height="40" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
