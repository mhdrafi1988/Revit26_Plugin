<Window x:Class="Revit26_Plugin.Creaser_V32.Views.CreaserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creaser V32"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Detail Item Selector -->
        <ComboBox Grid.Row="0"
                  ItemsSource="{Binding LineBasedDetailTypes}"
                  SelectedItem="{Binding SelectedDetailType}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,10"/>

        <!-- Run Button -->
        <Button Grid.Row="1"
                Content="Generate Crease Lines"
                Command="{Binding RunCommand}"
                Height="40"
                VerticalAlignment="Top"/>

        <!-- Live Log -->
        <TextBox Grid.Row="2"
                 Text="{Binding LogText}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
