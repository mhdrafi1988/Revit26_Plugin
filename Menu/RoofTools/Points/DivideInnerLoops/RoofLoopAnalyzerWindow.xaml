<Window x:Class="Revit22_Plugin.PDCV1.Views.RoofLoopAnalyzerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roof Loop Analyzer"
        Height="500" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Data Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Summary Text -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- 🔹 Header -->
        <TextBlock Text="Roof Loop Analyzer"
                   FontWeight="Bold"
                   FontSize="18"
                   Margin="0 0 0 10" />

        <!-- 🔹 Loop Data Table -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Loops}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0 0 0 10"
                  IsReadOnly="False" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Loop Type" Binding="{Binding LoopType}" IsReadOnly="True" Width="80"/>
                <DataGridTextColumn Header="Perimeter (mm)" Binding="{Binding PerimeterMm}" IsReadOnly="True" Width="120"/>
                <DataGridTextColumn Header="Shape Type" Binding="{Binding LoopShapeType}" IsReadOnly="True" Width="100"/>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsCircular}" Width="100"/>
                <DataGridTextColumn Header="Recommended Points" Binding="{Binding RecommendedPoints}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔹 Summary Text -->
        <TextBlock Grid.Row="2"
                   Text="{Binding Summary}"
                   TextWrapping="Wrap"
                   FontSize="13"
                   Margin="0 0 0 10"
                   Foreground="DarkGreen" />

        <!-- 🔹 Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
            <Button Content="Apply Division Points"
                    Width="160"
                    Margin="0 0 10 0"
                    Command="{Binding ApplyDivisionCommand}" />
            <Button Content="Close"
                    Width="80"
                    Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
