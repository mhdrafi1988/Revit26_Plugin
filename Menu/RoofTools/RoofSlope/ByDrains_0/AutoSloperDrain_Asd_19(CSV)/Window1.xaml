<Window x:Class="Revit26_Plugin.Asd_19.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Title="Auto Roof Sloper" 
        Height="800" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        SizeToContent="Height">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <!-- Fixed height for DataGrid -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="180"/>
            <!-- Fixed height for Log -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Auto Roof Sloper v2" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Roof Info -->
        <GroupBox Grid.Row="1" 
                  Header="Selected Roof" 
                  Margin="0,0,0,10"
                  Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding RoofInfo}" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="10,0"/>
                <Button Content="Change Roof" 
                        Command="{Binding ChangeRoofCommand}" 
                        Padding="10,5" 
                        Background="LightYellow" 
                        Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Results Info -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ResultsInfo}" 
                   FontWeight="Bold" 
                   Foreground="DarkGreen" 
                   Margin="0,0,0,10" 
                   HorizontalAlignment="Center"/>

        <!-- Slope Configuration -->
        <GroupBox Grid.Row="3" 
                  Header="Slope Configuration &amp; Drain Management" 
                  Margin="0,0,0,10"
                  Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Slope Input -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="5">
                    <TextBlock Text="Slope Percentage:" 
                               VerticalAlignment="Center" 
                               Margin="5,0,5,0" 
                               FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding SlopeOptions}" 
                              Text="{Binding SlopeInput}" 
                              Width="80" 
                              Margin="0,0,10,0" 
                              IsEditable="True"/>
                    <TextBlock Text="%" 
                               VerticalAlignment="Center"/>
                    <Button Content="Apply Slope" 
                            Command="{Binding ApplySlopesCommand}" 
                            Padding="15,5" 
                            Background="LightGreen" 
                            FontWeight="Bold" 
                            Margin="20,0,0,0"/>
                </StackPanel>

                <!-- Filter and Selection Controls -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="5,0,5,5">
                    <TextBlock Text="Filter by Size:" 
                               VerticalAlignment="Center" 
                               Margin="5,0,5,0"/>
                    <ComboBox ItemsSource="{Binding SizeFilters}" 
                              SelectedItem="{Binding SelectedSizeFilter}" 
                              Width="150" 
                              Margin="0,0,10,0"/>

                    <Button Content="Select All" 
                            Command="{Binding SelectAllCommand}" 
                            Padding="5,2" 
                            Margin="0,0,5,0"/>
                    <Button Content="Select None" 
                            Command="{Binding SelectNoneCommand}" 
                            Padding="5,2" 
                            Margin="0,0,5,0"/>
                    <Button Content="Invert Selection" 
                            Command="{Binding InvertSelectionCommand}" 
                            Padding="5,2" 
                            Margin="0,0,5,0"/>

                    <TextBlock Text="Selected:" 
                               VerticalAlignment="Center" 
                               Margin="10,0,5,0"/>
                    <TextBlock Text="{Binding SelectedDrainsCount}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Drains DataGrid with ScrollViewer -->
                <ScrollViewer Grid.Row="2" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <DataGrid ItemsSource="{Binding FilteredDrainsView}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              MaxHeight="200"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Select" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Shape Type" 
                                                Binding="{Binding ShapeType}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Size (mm)" 
                                                Binding="{Binding SizeCategory}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Width (mm)" 
                                                Binding="{Binding Width, StringFormat={}{0:F0}}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Height (mm)" 
                                                Binding="{Binding Height, StringFormat={}{0:F0}}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="X (mm)" 
                                                Binding="{Binding CenterPoint.X, StringFormat={}{0:F0}}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Y (mm)" 
                                                Binding="{Binding CenterPoint.Y, StringFormat={}{0:F0}}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Z (mm)" 
                                                Binding="{Binding CenterPoint.Z, StringFormat={}{0:F0}}" 
                                                Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Export Configuration Section -->
        <GroupBox Grid.Row="4" 
                  Header="Export Settings" 
                  Margin="0,0,0,10"
                  Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Export Folder Row -->
                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="Export Folder:" 
                           VerticalAlignment="Center" 
                           Margin="5"/>
                <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         Text="{Binding ExportFolderPath}" 
                         Margin="5" 
                         IsReadOnly="True" 
                         Background="#F0F0F0"
                         Height="25"/>
                <Button Grid.Row="0" 
                        Grid.Column="2" 
                        Content="Browse..." 
                        Command="{Binding BrowseExportFolderCommand}" 
                        Margin="5" 
                        Padding="10,2"
                        Height="25"/>

                <!-- Export Options Row -->
                <StackPanel Grid.Row="1" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="3" 
                            Orientation="Horizontal" 
                            Margin="5">
                    <CheckBox Content="Enable CSV Export" 
                              IsChecked="{Binding ExportToCsv}" 
                              Margin="0,0,20,0" 
                              VerticalAlignment="Center"/>
                    <CheckBox Content="Include Vertex Details" 
                              IsChecked="{Binding IncludeVertexDetails}" 
                              Margin="0,0,20,0" 
                              VerticalAlignment="Center"
                              IsEnabled="{Binding ExportToCsv}"/>
                    <Button Content="Export Results Now" 
                            Command="{Binding ExportResultsCommand}" 
                            Background="LightBlue" 
                            Padding="15,2" 
                            FontWeight="Bold"
                            IsEnabled="{Binding ExportToCsv}"
                            Height="25"/>
                </StackPanel>

                <!-- Export Info Row -->
                <TextBlock Grid.Row="2" 
                           Grid.Column="0" 
                           Grid.ColumnSpan="3" 
                           Text="Note: Exports include drain locations, vertex paths, and elevation data" 
                           Foreground="Gray" 
                           FontSize="10" 
                           Margin="5,0"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,5">
            <Button Content="OK" 
                    Command="{Binding OkCommand}" 
                    Padding="15,5" 
                    Background="LightBlue" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0"
                    Height="30"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Padding="15,5" 
                    Background="LightCoral" 
                    FontWeight="Bold"
                    Height="30"/>
        </StackPanel>

        <!-- Log Section -->
        <GroupBox Grid.Row="6" 
                  Header="Operation Log" 
                  Margin="0,0,0,0"
                  Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Copy button for log -->
                <Button Grid.Row="0" 
                        Content="Copy Log to Clipboard" 
                        Command="{Binding CopyLogCommand}" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,0,3" 
                        Padding="10,2"
                        Background="LightGray"
                        Height="25"/>

                <!-- Log TextBox with context menu -->
                <TextBox Grid.Row="1" 
                         Text="{Binding LogText, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto" 
                         FontFamily="Consolas" 
                         FontSize="10"
                         Background="White"
                         TextWrapping="Wrap"
                         MaxHeight="150"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>