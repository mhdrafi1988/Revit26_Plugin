<Window x:Class="Revit22_Plugin.Asd.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Title="Auto Roof Sloper" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Auto Roof Sloper v2" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Roof Info -->
        <GroupBox Grid.Row="1" Header="Selected Roof" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding RoofInfo}" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
                <Button Content="Change Roof" Command="{Binding ChangeRoofCommand}" 
                        Padding="10,5" Background="LightYellow" Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Results Info -->
        <TextBlock Grid.Row="2" Text="{Binding ResultsInfo}" FontWeight="Bold" Foreground="DarkGreen" 
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Slope Configuration -->
        <GroupBox Grid.Row="3" Header="Slope Configuration &amp; Drain Management" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Slope Input -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Slope Percentage:" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding SlopeOptions}" Text="{Binding SlopeInput}" 
                              Width="80" Margin="0,0,10,0" IsEditable="True"/>
                    <TextBlock Text="%" VerticalAlignment="Center"/>
                    <Button Content="Apply Slope" Command="{Binding ApplySlopesCommand}" 
                            Padding="15,5" Background="LightGreen" FontWeight="Bold" Margin="20,0,0,0"/>
                </StackPanel>

                <!-- Filter and Selection Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Filter by Size:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <ComboBox ItemsSource="{Binding SizeFilters}" SelectedItem="{Binding SelectedSizeFilter}" 
                              Width="150" Margin="0,0,10,0"/>

                    <Button Content="Select All" Command="{Binding SelectAllCommand}" 
                            Padding="5,2" Margin="0,0,5,0"/>
                    <Button Content="Select None" Command="{Binding SelectNoneCommand}" 
                            Padding="5,2" Margin="0,0,5,0"/>
                    <Button Content="Invert Selection" Command="{Binding InvertSelectionCommand}" 
                            Padding="5,2" Margin="0,0,5,0"/>

                    <TextBlock Text="Selected:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBlock Text="{Binding SelectedDrainsCount}" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Drains DataGrid -->
                <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredDrainsView}" 
                          AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Select" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Shape Type" Binding="{Binding ShapeType}" Width="100"/>
                        <DataGridTextColumn Header="Size (mm)" Binding="{Binding SizeCategory}" Width="120"/>
                        <DataGridTextColumn Header="Width (mm)" Binding="{Binding Width, StringFormat={}{0:F0}}" Width="80"/>
                        <DataGridTextColumn Header="Height (mm)" Binding="{Binding Height, StringFormat={}{0:F0}}" Width="80"/>
                        <DataGridTextColumn Header="X (mm)" Binding="{Binding CenterPoint.X, StringFormat={}{0:F0}}" Width="80"/>
                        <DataGridTextColumn Header="Y (mm)" Binding="{Binding CenterPoint.Y, StringFormat={}{0:F0}}" Width="80"/>
                        <DataGridTextColumn Header="Z (mm)" Binding="{Binding CenterPoint.Z, StringFormat={}{0:F0}}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="OK" Command="{Binding OkCommand}" 
                    Padding="15,5" Background="LightBlue" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    Padding="15,5" Background="LightCoral" FontWeight="Bold"/>
        </StackPanel>

        <!-- Log Section -->
        <GroupBox Grid.Row="5" Header="Operation Log">
            <TextBox Text="{Binding LogText, Mode=OneWay}" 
                     IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"
                     Background="White"/>
        </GroupBox>
    </Grid>
</Window>