<Window x:Class="Revit26_Plugin.AutoSlopeByDrain_06_00.UI.Views.AutoSlopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:converters="clr-namespace:Revit26_Plugin.AutoSlopeByDrain_06_00.UI.Views.Converters"
        xmlns:helpers="clr-namespace:Revit26_Plugin.AutoSlopeByDrain_06_00.Infrastructure.Helpers"
        mc:Ignorable="d" 
        Title="Auto Roof Slope by Drain" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <converters:ColorStringToBrushConverter x:Key="ColorConverter"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="RowHeight" Value="22"/>
            <Setter Property="AlternatingRowBackground" Value="#F0F7FF"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header with Gradient - FIXED -->
        <Border Grid.Row="0" 
                CornerRadius="5" 
                Margin="0,0,0,15"
                Padding="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#3498DB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="🚰" 
                           FontSize="24" 
                           Foreground="White" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="AUTO ROOF SLOPE BY DRAIN v6.0" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="15"
                        Padding="10,5">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{Binding StatusColor, Converter={StaticResource ColorConverter}}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Roof Info & Stats -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="🏠" 
                           FontSize="18" 
                           Margin="0,0,10,0" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Selected Roof:" Foreground="#7F8C8D" FontSize="11"/>
                    <TextBlock Text="{Binding RoofInfo}" 
                               Foreground="#2C3E50" 
                               FontWeight="SemiBold"
                               FontSize="13"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="30,0,0,0">
                    <TextBlock Text="Total Drains:" Foreground="#7F8C8D" FontSize="11"/>
                    <TextBlock Text="{Binding TotalDrainsCount}" 
                               Foreground="#2980B9" 
                               FontWeight="Bold" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="30,0,0,0">
                    <TextBlock Text="Selected:" Foreground="#7F8C8D" FontSize="11"/>
                    <TextBlock Text="{Binding SelectedDrainsCount}" 
                               Foreground="#27AE60" 
                               FontWeight="Bold" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Vertical" Margin="30,0,0,0">
                    <TextBlock Text="Slope:" Foreground="#7F8C8D" FontSize="11"/>
                    <TextBlock Text="{Binding SlopeInput}" 
                               Foreground="#E67E22" 
                               FontWeight="Bold" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Drain Detection & Selection -->
            <GroupBox Grid.Column="0" Header="🔍 DETECTED DRAIN OPENINGS" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter and Selection Controls -->
                    <Border Grid.Row="0" 
                            Background="#F8F9F9" 
                            Padding="10" 
                            CornerRadius="5" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Filter:" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,5,0"/>

                                <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding SizeFilters}" 
                                          SelectedItem="{Binding SelectedSizeFilter}" 
                                          Width="180" 
                                          Margin="0,0,10,0"
                                          Height="28"/>

                                <Button Grid.Column="2" 
                                        Content="✓ Select All" 
                                        Command="{Binding SelectAllCommand}"
                                        Style="{StaticResource ActionButton}"
                                        Background="#3498DB"
                                        Foreground="White"
                                        Width="90"/>

                                <Button Grid.Column="3" 
                                        Content="✗ Select None" 
                                        Command="{Binding SelectNoneCommand}"
                                        Style="{StaticResource ActionButton}"
                                        Background="#95A5A6"
                                        Foreground="White"
                                        Width="90"
                                        Margin="5,5"/>

                                <Button Grid.Column="4" 
                                        Content="↺ Invert" 
                                        Command="{Binding InvertSelectionCommand}"
                                        Style="{StaticResource ActionButton}"
                                        Background="#F39C12"
                                        Foreground="White"
                                        Width="70"
                                        Margin="5,5"/>
                            </Grid>

                            <TextBlock Margin="0,5,0,0" FontSize="10" Foreground="#7F8C8D">
                                * Only inner loops (openings) are detected. Perimeter is automatically excluded.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Drains DataGrid -->
                    <DataGrid Grid.Row="2" 
                              ItemsSource="{Binding FilteredDrainsView}" 
                              Background="White"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Use" Width="45">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="16"
                                                  Height="16"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Shape" 
                                                Binding="{Binding ShapeType}" 
                                                Width="70"/>

                            <DataGridTextColumn Header="Size (mm)" 
                                                Binding="{Binding SizeCategory}" 
                                                Width="90"/>

                            <DataGridTextColumn Header="Width" 
                                                Binding="{Binding Width, StringFormat={}{0:F0}}" 
                                                Width="60"/>

                            <DataGridTextColumn Header="Height" 
                                                Binding="{Binding Height, StringFormat={}{0:F0}}" 
                                                Width="60"/>

                            <DataGridTextColumn Header="X (mm)" 
                                                Binding="{Binding CenterPoint.X, StringFormat={}{0:F0}}" 
                                                Width="70"/>

                            <DataGridTextColumn Header="Y (mm)" 
                                                Binding="{Binding CenterPoint.Y, StringFormat={}{0:F0}}" 
                                                Width="70"/>

                            <DataGridTextColumn Header="Z (mm)" 
                                                Binding="{Binding CenterPoint.Z, StringFormat={}{0:F0}}" 
                                                Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Refresh Button -->
                    <Button Grid.Row="3" 
                            Content="🔄 Refresh Drain Detection" 
                            Command="{Binding RefreshDrainsCommand}"
                            Style="{StaticResource ActionButton}"
                            Background="#3498DB"
                            Foreground="White"
                            HorizontalAlignment="Left"
                            Width="180"/>
                </Grid>
            </GroupBox>

            <!-- Vertical Separator with GridSplitter -->
            <GridSplitter Grid.Column="1" 
                          Width="3" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Background="#CCCCCC"
                          ShowsPreview="True"/>

            <!-- RIGHT PANEL - Slope Configuration & Export -->
            <GroupBox Grid.Column="2" Header="⚙️ CONFIGURATION  EXPORT" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Slope Settings -->
                        <Border Background="#F8F9F9" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="SLOPE SETTINGS" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="Slope:" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,5,0"
                                               FontWeight="SemiBold"/>

                                    <ComboBox Grid.Column="1" 
                                              ItemsSource="{Binding SlopeOptions}" 
                                              Text="{Binding SlopeInput}" 
                                              IsEditable="True"
                                              Margin="0,0,5,0"
                                              Height="30"/>

                                    <TextBlock Grid.Column="2" 
                                               Text="%" 
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="Max Path:" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,5,0"
                                               FontWeight="SemiBold"/>

                                    <TextBox Grid.Column="1" 
                                             Text="{Binding ThresholdMeters}" 
                                             Height="30"
                                             Padding="5"/>
                                </Grid>

                                <TextBlock Margin="0,0,0,5" FontSize="10" Foreground="#7F8C8D">
                                    Vertices beyond max path will be skipped
                                </TextBlock>

                                <Button Content="🚀 APPLY SLOPE TO SELECTED DRAINS" 
                                        Command="{Binding ApplySlopesCommand}"
                                        Style="{StaticResource ActionButton}"
                                        Background="#27AE60"
                                        Foreground="White"
                                        FontSize="14"
                                        Padding="15,10"
                                        Height="40"
                                        Margin="0,10,0,5"/>
                            </StackPanel>
                        </Border>

                        <!-- Export Settings -->
                        <Border Background="#F8F9F9" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="EXPORT OPTIONS" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="Folder:" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,5,0"
                                               FontWeight="SemiBold"/>

                                    <TextBox Grid.Column="1" 
                                             Text="{Binding ExportFolderPath}" 
                                             IsReadOnly="True" 
                                             Background="#F0F0F0"
                                             Height="30"
                                             Padding="5"/>
                                </Grid>

                                <Button Content="📁 Browse Folder" 
                                        Command="{Binding BrowseFolderCommand}"
                                        Style="{StaticResource ActionButton}"
                                        Background="#95A5A6"
                                        Foreground="White"
                                        HorizontalAlignment="Left"
                                        Width="120"
                                        Margin="0,0,0,10"/>

                                <CheckBox Content="✓ Export to CSV" 
                                          IsChecked="{Binding ExportToCsv}"
                                          Margin="0,5,0,5"
                                          FontWeight="SemiBold"/>

                                <CheckBox Content="📊 Include Vertex Details (Detailed CSV)" 
                                          IsChecked="{Binding IncludeVertexDetails}"
                                          Margin="20,2,5,5"
                                          IsEnabled="{Binding ExportToCsv}"/>
                            </StackPanel>
                        </Border>

                        <!-- Results Summary -->
                        <Border Background="#F8F9F9" 
                                Padding="10" 
                                CornerRadius="5" 
                                Margin="0,0,0,10"
                                BorderBrush="#27AE60"
                                BorderThickness="1"
                                Visibility="{Binding HasRun, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel>
                                <TextBlock Text="📊 RESULTS SUMMARY" 
                                           FontWeight="Bold" 
                                           Foreground="#27AE60" 
                                           Margin="0,0,0,10"/>

                                <TextBox Text="{Binding SummaryText}" 
                                         IsReadOnly="True" 
                                         Background="White"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         Padding="8"
                                         TextWrapping="Wrap"
                                         Height="130"
                                         BorderBrush="#CCCCCC"/>
                            </StackPanel>
                        </Border>

                        <!-- Parameter Status -->
                        <Border Background="#F8F9F9" Padding="10" CornerRadius="5">
                            <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#7F8C8D">
                                <Bold>Note:</Bold> Results are written to custom parameters:
                                AutoSlope_HighestElevation, AutoSlope_VerticesProcessed,
                                AutoSlope_DrainCount, AutoSlope_RunDate, etc.
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,1,0,0" 
                Padding="10" 
                Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                <Button Content="📤 Export Results" 
                        Command="{Binding ExportResultsCommand}"
                        Style="{StaticResource ActionButton}"
                        Background="#F39C12"
                        Foreground="White"
                        Padding="15,5"
                        Width="120"
                        Margin="0,0,10,0"/>

                <Button Content="🧹 Clear Log" 
                        Command="{Binding ClearLogCommand}"
                        Style="{StaticResource ActionButton}"
                        Background="#7F8C8D"
                        Foreground="White"
                        Padding="15,5"
                        Width="100"
                        Margin="0,0,10,0"/>

                <Button Content="✓ OK" 
                        Command="{Binding OkCommand}"
                        Style="{StaticResource ActionButton}"
                        Background="#27AE60"
                        Foreground="White"
                        Padding="20,5"
                        Width="80"
                        Margin="0,0,10,0"/>

                <Button Content="✗ Cancel" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource ActionButton}"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="20,5"
                        Width="80"/>
            </StackPanel>
        </Border>

        <!-- Log Section -->
        <GroupBox Grid.Row="4" Header="📋 OPERATION LOG">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" 
                         Text="{Binding LogText, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto" 
                         FontFamily="Consolas" 
                         FontSize="10"
                         Background="White"
                         Padding="5"
                         TextWrapping="Wrap"/>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,5,0,0">
                    <Button Content="📋 Copy Log" 
                            Command="{Binding CopyLogCommand}"
                            Style="{StaticResource ActionButton}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="10,2"
                            Width="90"
                            Margin="0,0,5,0"/>

                    <Button Content="💾 Export Log" 
                            Command="{Binding ExportLogCommand}"
                            Style="{StaticResource ActionButton}"
                            Background="#2C3E50"
                            Foreground="White"
                            Padding="10,2"
                            Width="90"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>