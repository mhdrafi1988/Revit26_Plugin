<Window x:Class="Revit26_Plugin.AutoSlope.V5_00.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Revit26_Plugin.AutoSlope.V5_00.Infrastructure.Helpers.Converters"
        mc:Ignorable="d"
        Title="Auto Slope Engine V5 - Revit 2026"
        Width="1200"
        Height="962"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ColorStringToBrushConverter x:Key="ColorStringToBrushConverter"/> -->

            <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="SubHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="InputControl" TargetType="Control">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3498DB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DrainListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEE"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LogTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL - ROOF INFO & DRAINS -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8"
                Padding="15"
                BorderBrush="#DDD" 
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Auto Slope Engine V5"
                               Style="{StaticResource HeaderText}"/>

                    <!-- Roof Info Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="SELECTED ROOF" 
                                       Style="{StaticResource SubHeaderText}"/>
                            <TextBlock Text="{Binding RoofInfo}" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>
                            <Button Content="Change Roof" 
                                    Command="{Binding ChangeRoofCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="30"
                                    Padding="10,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Slope Settings -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="SLOPE SETTINGS" 
                                       Style="{StaticResource SubHeaderText}"/>

                            <TextBlock Text="Slope Percentage (%)"
                                       Style="{StaticResource LabelText}"/>
                            <ComboBox ItemsSource="{Binding SlopeOptions}"
                                      SelectedItem="{Binding SlopePercent, Mode=TwoWay}"
                                      Style="{StaticResource InputControl}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat={}{0:F1}%}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Threshold Distance (meters)"
                                       Style="{StaticResource LabelText}"/>
                            <TextBox Text="{Binding ThresholdMeters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputControl}"/>

                            <Button Content="APPLY SLOPE TO SELECTED DRAINS"
                                    Command="{Binding ApplySlopesCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Drain Management -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="DRAIN OPENINGS" 
                                       Style="{StaticResource SubHeaderText}"/>

                            <TextBlock Text="Total Drains Found:"
                                       Style="{StaticResource LabelText}"/>
                            <TextBlock Text="{Binding AllDrains.Count}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#27AE60"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Filter by Size"
                                       Style="{StaticResource LabelText}"/>
                            <ComboBox ItemsSource="{Binding SizeFilters}"
                                      SelectedItem="{Binding SelectedSizeFilter, Mode=TwoWay}"
                                      Style="{StaticResource InputControl}"/>

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,10">
                                <Button Content="Select All" 
                                        Command="{Binding SelectAllCommand}"
                                        Width="80" Height="28" Margin="0,0,5,0"/>
                                <Button Content="Select None" 
                                        Command="{Binding SelectNoneCommand}"
                                        Width="80" Height="28" Margin="5,0,5,0"/>
                                <Button Content="Invert" 
                                        Command="{Binding InvertSelectionCommand}"
                                        Width="60" Height="28"/>
                            </StackPanel>

                            <TextBlock Text="Selected:"
                                       Style="{StaticResource LabelText}"/>
                            <TextBlock Text="{Binding SelectedDrainsCount}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#3498DB"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>

                    <!-- Export Settings -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="EXPORT SETTINGS" 
                                       Style="{StaticResource SubHeaderText}"/>

                            <CheckBox Content="Export to CSV"
                                      IsChecked="{Binding ExportToCsv}"
                                      Margin="0,0,0,8"/>

                            <CheckBox Content="Export to Excel"
                                      IsChecked="{Binding ExportToExcel}"
                                      Margin="0,0,0,8"/>

                            <CheckBox Content="Include Vertex Details"
                                      IsChecked="{Binding IncludeVertexDetails}"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="Export Folder"
                                       Style="{StaticResource LabelText}"/>
                            <DockPanel LastChildFill="True" Margin="0,0,0,8">
                                <Button Content="Browse" 
                                        DockPanel.Dock="Right"
                                        Width="70" Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding BrowseFolderCommand}"/>
                                <TextBox Text="{Binding ExportFolderPath, Mode=TwoWay}"
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Background="#F8F8F8"
                                         Height="28"/>
                            </DockPanel>

                            <Button Content="Export Results"
                                    Command="{Binding ExportResultsCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="30"
                                    Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <!-- Drains DataGrid -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="8"
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#2C3E50" 
                            CornerRadius="8,8,0,0"
                            Padding="10">
                        <TextBlock Text="DETECTED DRAIN OPENINGS" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </Border>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding FilteredDrainsView}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="✓" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Shape" Binding="{Binding ShapeType}" Width="80"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeCategory}" Width="100"/>
                            <DataGridTextColumn Header="Width (mm)" Binding="{Binding Width, StringFormat={}{0:F0}}" Width="70"/>
                            <DataGridTextColumn Header="Height (mm)" Binding="{Binding Height, StringFormat={}{0:F0}}" Width="70"/>
                            <DataGridTextColumn Header="X (mm)" Binding="{Binding CenterPoint.X, StringFormat={}{0:F0}}" Width="70"/>
                            <DataGridTextColumn Header="Y (mm)" Binding="{Binding CenterPoint.Y, StringFormat={}{0:F0}}" Width="70"/>
                            <DataGridTextColumn Header="Z (mm)" Binding="{Binding CenterPoint.Z, StringFormat={}{0:F0}}" Width="70"/>
                            <DataGridTextColumn Header="Drain ID" Binding="{Binding DrainId}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Results Summary & Log Panel -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Results Summary -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8"
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#3498DB" 
                                CornerRadius="8,8,0,0"
                                Padding="10">
                            <TextBlock Text="RESULTS SUMMARY" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="10">
                            <TextBox Text="{Binding SummaryText, Mode=OneWay}"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     BorderThickness="0"
                                     Background="#F8F9FA"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Live Log -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="8"
                        BorderBrush="#DDD" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#E74C3C" 
                                CornerRadius="8,8,0,0"
                                Padding="10">
                            <DockPanel>
                                <TextBlock Text="LIVE PROCESSING LOG" 
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                <Button Content="Clear" 
                                        DockPanel.Dock="Right"
                                        Width="50" Height="22"
                                        Background="#C0392B"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Command="{Binding ClearLogCommand}"/>
                            </DockPanel>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FullMessage}"
                                                   FontFamily="Consolas"
                                                   FontSize="11">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource ColorStringToBrushConverter}">
                                                    <Binding Path="Color" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>