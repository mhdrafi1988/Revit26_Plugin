<Window x:Class="Revit26_Plugin.AutoSlopeByPoint_WIP2.Views.AutoSlopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Revit26_Plugin.AutoSlopeByPoint_WIP2.Views"
        mc:Ignorable="d"
        Title="Auto Slope Engine - Revit 2026"
        Width="1100"
        Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="InputControl" TargetType="Control">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT PANEL - CONTROLS ================= -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5"
                Padding="15"
                BorderBrush="#DDD" 
                BorderThickness="1">

            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Auto Slope Engine"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,20"/>

                <!-- Slope Selection -->
                <TextBlock Text="Slope Percentage"
                           Style="{StaticResource LabelText}"/>

                <ComboBox Style="{StaticResource InputControl}"
                          ItemsSource="{Binding SlopeOptions}"
                          SelectedItem="{Binding SlopePercent, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StringFormat={}{0}%}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Threshold -->
                <TextBlock Text="Threshold Distance (meters)"
                           Style="{StaticResource LabelText}"/>

                <TextBox Style="{StaticResource InputControl}"
                         Text="{Binding ThresholdMeters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Export Settings -->
                <GroupBox Header="Export Settings" 
                          FontWeight="Bold"
                          Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="CSV Export Folder"
                                   Style="{StaticResource LabelText}"/>

                        <DockPanel LastChildFill="True" Margin="0,0,0,8">
                            <Button Content="Browse" 
                                    DockPanel.Dock="Right"
                                    Width="70"
                                    Height="28"
                                    Margin="5,0,0,0"
                                    Command="{Binding BrowseFolderCommand}"/>

                            <TextBox Text="{Binding ExportFolderPath, Mode=TwoWay}"
                                     VerticalContentAlignment="Center"
                                     IsReadOnly="True"
                                     Background="#F8F8F8"/>
                        </DockPanel>

                        <TextBlock Text="Default: Documents\AutoSlope_Reports"
                                   FontStyle="Italic"
                                   Foreground="#7F8C8D"
                                   FontSize="11"/>
                    </StackPanel>
                </GroupBox>

                <!-- Run Button -->
                <Button Content="RUN AUTOSLOPE"
                        
                        Command="{Binding RunCommand}"
                        ToolTip="Calculate and apply slope to roof">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasRun}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Background" Value="#95A5A6"/>
                                    <Setter Property="Content" Value="RUNNING..."/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Status Indicator -->
                <Border Margin="0,20,0,0" 
                        Padding="10" 
                        Background="#F8F9FA" 
                        CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="Status" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="{Binding HasRun, Converter={StaticResource InverseBoolConverter}}"
                                   FontSize="11">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasRun}" Value="True">
                                            <Setter Property="Text" Value="Processing..."/>
                                            <Setter Property="Foreground" Value="#E67E22"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasRun}" Value="False">
                                            <Setter Property="Text" Value="Ready to run"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Instructions -->
                <TextBlock Text="Note: Ensure roof shape editing is enabled"
                           FontStyle="Italic"
                           Foreground="#7F8C8D"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"
                           FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- ================= RIGHT PANEL - RESULTS ================= -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>

            <!-- Live Log Panel -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="5"
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" 
                            Background="#2C3E50" 
                            CornerRadius="5,5,0,0"
                            Padding="10">
                        <DockPanel>
                            <TextBlock Text="Live Processing Log" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="14"/>

                            <Button Content="Clear" 
                                    DockPanel.Dock="Right"
                                    Width="60"
                                    Height="25"
                                    Click="ClearLog_Click"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </DockPanel>
                    </Border>

                    <!-- Log Content -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogTextBox"
                                 Text="{Binding LogText, Mode=OneWay}"
                                 Background="#1E1E1E"
                                 Foreground="#CCCCCC"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 BorderThickness="0"
                                 VerticalAlignment="Top"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Summary Panel -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="5"
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Header -->
                    <Border Grid.Row="0" 
                            Background="#3498DB" 
                            CornerRadius="5,5,0,0"
                            Padding="10">
                        <TextBlock Text="Results Summary" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </Border>

                    <!-- Summary Content -->
                    <TextBox Grid.Row="1"
                             Text="{Binding SummaryText, Mode=OneWay}"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             Background="#F8F9FA"
                             Padding="10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>