<Window x:Class="Revit26_Plugin.AutoSlopeByPoint.Views.AutoSlopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Slope Engine"
        Width="820" Height="600"
        Background="#FFFFFF"
        Foreground="#1A1A1A"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>

        <!-- COLORS -->
        <SolidColorBrush x:Key="PrimaryText" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#F7F7F7"/>
        <SolidColorBrush x:Key="BorderLight" Color="#D4D7DB"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3A78F0"/>

        <!-- BUTTON STYLE -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#C8CCD3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9EEF7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- INPUT STYLE -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#C8CCD3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#C8CCD3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

    </Window.Resources>


    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT INPUT PANEL -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">

            <TextBlock Text="Auto Sloper ⚙️"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentBlue}"
                       Margin="0,0,0,12"/>

            <!-- Editable Slope ComboBox -->
            <TextBlock Text="Slope (%) 📐"
                       Foreground="{StaticResource PrimaryText}"/>

            <ComboBox ItemsSource="{Binding SlopeOptions}"
                      SelectedItem="{Binding SelectedSlope}"
                      Text="{Binding SelectedSlope, UpdateSourceTrigger=PropertyChanged}"
                      IsEditable="True"
                      IsReadOnly="False"/>

            <TextBlock Text="Threshold (m) 🎯"
                       Margin="0,12,0,4"
                       Foreground="{StaticResource PrimaryText}"/>

            <TextBox Text="{Binding ThresholdMeters}"/>

            <Button Content="RUN ⚡"
                    Margin="0,20,0,0"
                    Command="{Binding RunCommand}"/>
        </StackPanel>


        <!-- LOG HEADER -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Processing Log 📜"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{StaticResource AccentBlue}"
                   Margin="0,0,0,6"/>

        <!-- LOG AREA -->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                Background="Green"
                BorderBrush="{StaticResource BorderLight}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,25,0,0">

            <RichTextBox x:Name="LogBox"
                         Background="Black"
                         Foreground="#1A1A1A"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Auto" TextChanged="LogBox_TextChanged_1" FontSize="14" FontWeight="Bold"/>
        </Border>

        <!-- SUMMARY AREA (Moved to RIGHT SIDE) -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,15,0,0">

            <TextBlock Text="AutoSlope Summary ⚙️"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentBlue}"
                       Margin="0,0,0,8"/>

            <Border Background="#FFFFFF"
                    BorderBrush="{StaticResource BorderLight}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="8">

                <TextBox Text="{Binding SummaryText}"
                         Background="#FFFFFF"
                         Foreground="#1A1A1A"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="13"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="150"/>
            </Border>
        </StackPanel>

    </Grid>
</Window>
