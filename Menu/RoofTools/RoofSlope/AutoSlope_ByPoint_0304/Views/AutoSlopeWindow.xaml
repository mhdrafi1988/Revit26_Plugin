<Window x:Class="Revit26_Plugin.AutoSlopeByPoint.Views.AutoSlopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Slope Engine"
        Width="1050"
        Height="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Auto Sloper 03_04"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#3A6BFF"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Slope (%)"/>
            <ComboBox Height="28"
                      ItemsSource="{Binding SlopeOptions}"
                      SelectedValuePath="."
                      SelectedValue="{Binding SlopePercent, Mode=TwoWay}"
                      Margin="0,4,0,16"/>

            <TextBlock Text="Threshold (m)"/>
            <TextBox Height="28"
                     Text="{Binding ThresholdMeters,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,4,0,20"/>

            <Button Content="RUN ?"
                    Height="36"
                    FontWeight="Bold"
                    Command="{Binding RunCommand}"/>
        </StackPanel>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <!-- LOG -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Processing Log"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#3A6BFF"
                           Margin="0,0,0,6"/>

                <Border BorderBrush="Green"
                        BorderThickness="2">
                    <TextBox x:Name="LogBox"
                             Background="Black"
                             Foreground="White"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Border>
            </StackPanel>

            <!-- SUMMARY -->
            <StackPanel Grid.Row="1" Margin="0,16,0,0">
                <TextBlock Text="AutoSlope Summary"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#3A6BFF"
                           Margin="0,0,0,6"/>

                <TextBox Height="170"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Text="{Binding SummaryText, Mode=OneWay}" />           

            </StackPanel>
        </Grid>
    </Grid>
</Window>
