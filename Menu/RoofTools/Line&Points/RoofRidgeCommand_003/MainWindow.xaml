<Window
    x:Class="Revit22_Plugin.RRLPV3.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Roof Ridge Processor"
    Width="420"
    Height="160"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status -->
        <TextBlock 
            Text="{Binding StatusMessage}"
            FontSize="14"
            Margin="0 0 0 10" />

        <!-- Start Button -->
        <Button Grid.Row="1"
                Content="Start"
                Command="{Binding StartCommand}"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"/>

        <!-- Close -->
        <Button Grid.Row="2"
                Content="Cancel"
                Command="{Binding CloseCommand}"
                Width="120"
                Height="28"
                Margin="0 10 0 0"
                HorizontalAlignment="Left"/>
    </Grid>
</Window>
