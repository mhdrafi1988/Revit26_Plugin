<Window x:Class="Revit26_Plugin.RoofTools.LineAndPoints.RoofRidgeLines_V11.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roof Ridge Lines"
        Height="220"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Roof Ridge Lines Tool"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Status -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Start"
                    Width="90"
                    Margin="0,0,10,0"
                    Command="{Binding StartCommand}"/>

            <Button Content="Cancel"
                    Width="90"
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
