<Window x:Class="Revit26_Plugin.RoofTools.LineAndPoints.RoofRidgeLines_V08.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roof Ridge Processor" Width="400" Height="200"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="#F5F5F5"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Roof Ridge Line Processor" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,15"/>

        <!-- Status Area -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                Padding="12"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}" 
                      FontSize="14"
                      Foreground="#444444"
                      TextWrapping="Wrap"
                      VerticalAlignment="Center"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Start" 
                    Command="{Binding StartCommand}" 
                    Width="90" 
                    Height="32"
                    Background="#0078D4"
                    Foreground="White"
                    BorderBrush="#0078D4"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Padding="8,2"/>

            <Button Content="Cancel" 
                    Command="{Binding CloseCommand}" 
                    Width="90" 
                    Height="32"
                    Background="Transparent"
                    Foreground="#666666"
                    BorderBrush="#CCCCCC"
                    Padding="8,2"/>
        </StackPanel>
    </Grid>
</Window>