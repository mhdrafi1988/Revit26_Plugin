<UserControl x:Class="Revit26_Plugin.RoofRidgeLines_V06.Views.Steps.Step2_PointPickView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <StackPanel Margin="20">

        <TextBlock Text="Step 2: Pick Two Roof Points"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <Button Content="Pick Points"
                Width="140"
                Margin="0,0,0,10"
                Command="{Binding PickPointsCommand}"/>

        <TextBlock Text="Distance Preview (meters):"
                   FontWeight="Bold"/>

        <TextBlock Text="{Binding DistanceMeters, StringFormat=F2}"
                   Margin="0,4,0,0"/>

        <TextBlock Text="Minimum required: 1.00 m"
                   Foreground="Gray"
                   Margin="0,6,0,0"/>

        <TextBlock Text="Status:"
                   FontWeight="Bold"
                   Margin="0,10,0,0"/>

        <TextBlock Text="{Binding IsValid, Converter={StaticResource BoolToStatusConverter}}"/>

    </StackPanel>
</UserControl>
