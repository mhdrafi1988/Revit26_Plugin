<Window x:Class="Revit26_Plugin.CreaserAdv_V003.Views.CreaserAdvWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creaser Advanced"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Creaser Advanced – Detail Line Placement"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <!-- Log Panel -->
        <Border Grid.Row="1"
                BorderBrush="#BFBFBF"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding LogEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Message}"
                                       FontSize="12"
                                       Margin="4,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Run"
                    Width="100"
                    Height="28"
                    Margin="0,0,10,0"
                    Command="{Binding RunCommand}"/>

            <Button Content="Close"
                    Width="100"
                    Height="28"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
