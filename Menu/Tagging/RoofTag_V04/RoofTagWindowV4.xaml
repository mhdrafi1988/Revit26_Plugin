<Window x:Class="Revit22_Plugin.RoofTagV4.Views.RoofTagWindowV4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roof Tag V4"
        Width="430"
        Height="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12">

            <!-- ==================================================
                 ROOF INFO
            ================================================== -->
            <GroupBox Header="Roof Info" Margin="0 0 0 12">
                <TextBlock Text="{Binding RoofInfo}"
                           TextWrapping="Wrap"
                           Margin="8"
                           FontWeight="SemiBold"
                           Foreground="DarkBlue"/>
            </GroupBox>

            <!-- ==================================================
                 BEND ANGLE
            ================================================== -->
            <GroupBox Header="Bend Angle" Margin="0 0 0 12">
                <StackPanel Orientation="Horizontal" Margin="8">
                    <RadioButton Content="30°"
                                 Width="60"
                                 IsChecked="{Binding IsAngle30}" />
                    <RadioButton Content="45°"
                                 Width="60"
                                 Margin="20 0 0 0"
                                 IsChecked="{Binding IsAngle45}" />
                </StackPanel>
            </GroupBox>

            <!-- ==================================================
                 BEND DIRECTION
            ================================================== -->
            <GroupBox Header="Bend Direction" Margin="0 0 0 12">
                <StackPanel Orientation="Horizontal" Margin="8">
                    <RadioButton Content="Inward"
                                 Width="80"
                                 IsChecked="{Binding BendInward}" />
                    <RadioButton Content="Outward"
                                 Width="80"
                                 Margin="20 0 0 0"
                                 IsChecked="{Binding BendOutward}" />
                </StackPanel>
            </GroupBox>

            <!-- ==================================================
                 OFFSETS
            ================================================== -->
            <GroupBox Header="Offsets (mm)" Margin="0 0 0 12">
                <Grid Margin="8">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bend Offset -->
                    <TextBlock Text="Bend Offset:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding BendOffset}"
                             Width="90"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="4 0 0 4"/>

                    <!-- End Offset -->
                    <TextBlock Text="End Offset:"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0 8 0 0"/>
                    <TextBox Text="{Binding EndOffset}"
                             Width="90"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="4 8 0 0"/>

                </Grid>
            </GroupBox>

            <!-- ==================================================
                 FILTER THRESHOLDS
            ================================================== -->
            <GroupBox Header="Point Filter Thresholds (mm)" Margin="0 0 0 12">
                <Grid Margin="8">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Clutter -->
                    <TextBlock Text="Clutter Threshold:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ClutterThreshold}"
                             Width="90"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="4 0 0 4"/>

                    <!-- Drain -->
                    <TextBlock Text="Drain Threshold:"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0 8 0 0"/>
                    <TextBox Text="{Binding DrainThreshold}"
                             Width="90"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="4 8 0 0"/>

                </Grid>
            </GroupBox>

            <!-- ==================================================
                 SPOT TAG TYPE
            ================================================== -->
            <GroupBox Header="Spot Tag Type" Margin="0 0 0 12">
                <ComboBox ItemsSource="{Binding SpotTagTypes}"
                          SelectedItem="{Binding SelectedSpotTagType}"
                          DisplayMemberPath="Name"
                          Margin="8"
                          Height="28"/>
            </GroupBox>

            <!-- ==================================================
                 LEADER SETTINGS
            ================================================== -->
            <GroupBox Header="Leader" Margin="0 0 0 12">
                <StackPanel Margin="8">
                    <CheckBox Content="Use Leader"
                              IsChecked="{Binding UseLeader}" />
                </StackPanel>
            </GroupBox>

            <!-- ==================================================
                 RESULT MESSAGE
            ================================================== -->
            <GroupBox Header="Result" Margin="0 0 0 12">
                <TextBlock Text="{Binding ResultMessage}"
                           TextWrapping="Wrap"
                           Margin="8"
                           Foreground="DarkGreen"
                           FontWeight="SemiBold" />
            </GroupBox>

            <!-- ==================================================
                 BUTTONS
            ================================================== -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">

                <Button Content="Run"
                        Width="80"
                        Margin="0 0 10 0"
                        Click="OnOK"/>

                <Button Content="Close"
                        Width="80"
                        Click="OnCancel"/>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
