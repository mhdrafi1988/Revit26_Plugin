<Window x:Class="Revit26_Plugin.RoofTag_V73.Views.RoofTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:Revit26_Plugin.RoofTag_V73.Helpers"
        mc:Ignorable="d"
        Title="Roof Tag"
        Height="420"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= MODE ================= -->
        <GroupBox Header="Mode" Margin="0,0,0,8">
            <StackPanel>
                <RadioButton Content="Automatic (Roof Shape)"
                             IsChecked="{Binding UseManualMode, Converter={StaticResource InverseBoolConverter}}"/>
                <RadioButton Content="Manual (Pick Points)"
                             IsChecked="{Binding UseManualMode}"/>
            </StackPanel>
        </GroupBox>

        <!-- ================= ANGLE ================= -->
        <GroupBox Header="Leader Angle" Grid.Row="1" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="45°"
                             IsChecked="{Binding IsAngle45}"
                             Margin="0,0,12,0"/>
                <RadioButton Content="30°"
                             IsChecked="{Binding IsAngle45, Converter={StaticResource InverseBoolConverter}}"/>
            </StackPanel>
        </GroupBox>

        <!-- ================= DIRECTION ================= -->
        <GroupBox Header="Bend Direction" Grid.Row="2" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Inward"
                             IsChecked="{Binding BendInward}"
                             Margin="0,0,12,0"/>
                <RadioButton Content="Outward"
                             IsChecked="{Binding BendInward, Converter={StaticResource InverseBoolConverter}}"/>
            </StackPanel>
        </GroupBox>

        <!-- ================= OFFSETS ================= -->
        <GroupBox Header="Offsets (mm)" Grid.Row="3" Margin="0,0,0,8">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Bend Offset:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                         Text="{Binding BendOffset}"
                         Margin="6,0,0,6"/>

                <TextBlock Grid.Row="1"
                           Text="End Offset:"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding EndOffset}"
                         Margin="6,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- ================= TAG TYPE ================= -->
        <GroupBox Header="Spot Tag Type" Grid.Row="4" Margin="0,0,0,8">
            <ComboBox ItemsSource="{Binding SpotTagTypes}"
                      SelectedItem="{Binding SelectedSpotTagType}"
                      DisplayMemberPath="Name"/>
        </GroupBox>

        <!-- ================= ACTIONS ================= -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    Click="OnOK"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
